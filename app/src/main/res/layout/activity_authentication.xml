<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AuthenticationActivity">

    <ImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="center"
        android:background="@color/mycolor10"
        android:src="@drawable/whatsapplogo"
        android:contentDescription="@string/logo_of_the_app"
        />

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imgBackground"
        android:layout_marginTop="-35dp"
        android:background="@drawable/view_bg"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutAuthentication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/view_bg"
            />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerAuthentication"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            />
    </LinearLayout>

</RelativeLayout>